<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover"/>
    <meta http-equiv="X-UA-Compatible" content="ie=edge"/>
    <link rel="icon" href="./static/logo-small.svg">
    <title>@ViewData["Title"] - ExpenseTracker</title>
    <!-- CSS files -->
    <link rel="stylesheet" href="~/dist/css/tabler.min.css"  asp-append-version="true"/>
    <link rel="stylesheet" href="~/dist/css/tabler-flags.min.css"  asp-append-version="true"/>
    <link rel="stylesheet" href="~/dist/css/tabler-payments.min.css"  asp-append-version="true"/>
    <link rel="stylesheet" href="~/dist/css/tabler-vendors.min.css" asp-append-version="true"/>
